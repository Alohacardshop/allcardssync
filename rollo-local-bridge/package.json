{
  "name": "zebra-print-bridge",
  "version": "1.0.0",
  "description": "Local print bridge for Zebra thermal printers - standalone exe",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "pkg . --targets node18-win-x64 --output ZebraPrintBridge.exe",
    "build-all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist/"
  },
  "pkg": {
    "assets": [],
    "targets": ["node18-win-x64"]
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "keywords": ["zebra", "printer", "zpl", "bridge", "thermal"],
  "author": "Aloha Card Shop",
  "license": "MIT"
}
